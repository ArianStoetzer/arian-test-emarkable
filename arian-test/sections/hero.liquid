{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Your Title Here"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text Block",
      "default": "Your description here"
    },
    {
      "type": "collection",
      "id": "collection1",
      "label": "Collection 1"
    },
    {
      "type": "collection",
      "id": "collection2",
      "label": "Collection 2"
    },
    {
      "type": "collection",
      "id": "collection3",
      "label": "Collection 3"
    },
    {
        "type": "collection",
        "id": "collection4",
        "label": "Collection 4"
    },
    {
        "type": "collection",
        "id": "collection5",
        "label": "Collection 5"
    },
    {
        "type": "collection",
        "id": "collection6",
        "label": "Collection 6"
    },
    {
        "type": "collection",
        "id": "collection7",
        "label": "Collection 7"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}


{{ 'section-hero.css' | asset_url | stylesheet_tag }}



<div class="hero-section">
  <div class="hero-bg">
    <div class="hero-text-wrapper">
        <div class="hero-text">
            <h1>{{ section.settings.title }}</h1>
            <p>{{ section.settings.text }}</p>
        </div>
    </div>
  </div>
  <div class="hero-collections">
  {% for i in (1..3) %}
    {% assign collection_key = 'collection' | append: i %}
    {% assign collection = section.settings[collection_key] %}
    {% if collection %}
      <div class="hero-collection">
        {% assign image = collection.image %}
        <img src="{{ image | image_url: width: 600 }}" alt="{{ collection.title }}" width="600" height="600">
        <div class="hero-collection-title">
            {% assign words = collection.title | split: ' ' %}
            {% if words.size > 0 %}
                <p class ="eerste-woord">{{ words.first }}</p>
            {% assign rest_of_title = words | slice: 1, words.size | join: ' ' %}
                <p>{{ rest_of_title }}</p>
            {% else %}
                <p>{{ collection.title }}</p>
            {% endif %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
  </div>
  <div class="small-collections">
    {% for i in (4..7) %}
        {% assign collection_key = 'collection' | append: i %}
        {% assign collection = section.settings[collection_key] %}
        {% if collection %}
            <div class="hero-small-collection" style="background-image: url('{{ collection.image | image_url: width: 400 }}');">
                <div class="hero-small-collection-title">
                    {% assign words = collection.title | split: ' ' %}
                    {% if words.size > 0 %}
                        <p class ="eerste-woord">{{ words.first }}</p>
                    {% assign rest_of_title = words | slice: 1, words.size | join: ' ' %}
                        <p>{{ rest_of_title }}</p>
                    {% else %}
                        <p>{{ collection.title }}</p>
                    {% endif %}
                </div>
              </div>
        {% endif %}
    {% endfor %}
  </div>
</div>
  
